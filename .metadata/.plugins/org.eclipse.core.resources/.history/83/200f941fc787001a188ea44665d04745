<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<!DOCTYPE html>

<html>
<head>
 <meta charset="ISO-8859-1">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Auto Play image Slider</title>
</head>

<body>

  <div class="slider">

    <div id="img">
      <img  src="image/a1.jpg" alt="" title="#htmlcaption-1">
      <img  src="image/a2.jpg" alt="" title="#htmlcaption-2">
      <img  src="image/a3.jpg" alt="" title="#htmlcaption-3">
      <img  src="image/a4.jpg" alt="" title="#htmlcaption-3">
    </div>

  </div>

  <script>

    var images = ['a1.jpg', 'a2.jpg', 'a3.jpg', 'a4.jpg'];

    var x = 0;

    var imgs = document.getElementById('img');

    setInterval(slider, 2000);


    function slider() {

      if (x < images.length) {
        x = x + 1;
      } else {
        x = 1;
      }


      imgs.innerHTML = "<img src=image" + images[x - 1] + ">";


    }


  </script>


  <style type="text/css">
    .slider {
      width: 90%;
      height: 500px;
      margin: 20px auto;
      box-sizing: border-box;
      overflow: hidden;
      box-shadow: 5px 5px 10px grey;

    }

    img {
      width: 100%;
      height: 100%;
      animation: ani 2s linear;

    }

    @keyframes ani {
      0% {
        transform: scale(1.2);
      }
      10% {
        transform: scale(1);
      }
      100% {
        transform: scale(1);
      }
    }
  </style>



</body>

</html>